<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ipi_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_ipi_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2017-03-14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="国际商业机器联盟" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="dell灵越15R" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="资源池优化提升开发及实施项目-二期-资本金"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南瑞"
            android:layout_marginTop="6dp"
            android:layout_alignParentLeft="true"/>


        <ImageView
            android:id="@+id/iv_ipi_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/chuku"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>